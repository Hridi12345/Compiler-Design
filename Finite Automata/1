//regular expression= a(a+b)*

#include <iostream>
#include <string>
using namespace std;

bool FiniteAutomata(const string & input) {
    int state = 0;

    for (char x: input) {
        switch (state) {
            case 0:
                if (x == 'a') state = 1;
                else state = 2;
                break;

            case 1:
                if (x == 'a' || x == 'b') state = 1;
                else state = 2;
                break;

            case 2:
                state = 2;
                break;
        }
    }

    return (state == 1);
}

int main() {
    cout<<"regular expression= a(a+b)*"<<endl;
    cout<<"alphabet set={a,b}"<<endl;
    string input;
    cout << "Input String: ";
    cin >> input;

    if (FiniteAutomata(input))
        cout << "Accepted" << endl;
    else
        cout << "Rejected" << endl;

    return 0;
}
