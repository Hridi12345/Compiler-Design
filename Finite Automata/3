//regular expression: a(a+b)*+b*

#include <iostream>
#include <string>
using namespace std;

bool FiniteAutomata(const string& input) {
    int state = 0;

    for (char x : input) {
        switch (state) {
            case 0:
                if (x == 'a') state = 1;
                else if (x == 'b') state = 2;
                else state = 3;
                break;

            case 1:
                if (x == 'a' || x == 'b') state = 1;
                else state = 3;
                break;

            case 2:
                if (x == 'b') state = 2;
                else state = 3;
                break;

            case 3:

               state = 3;

                break;
        }
    }

    return (state == 0 || state == 1|| state == 2);
}

int main() {
    cout<<"regular expression: a(a+b)*+b*"<<endl;
    cout<<"alphabet set: {a,b}"<<endl;

    string input;
    cout << "Input String: ";
    getline(cin,input);

    if (FiniteAutomata(input))
        cout << "Accepted" << endl;
    else
        cout << "Rejected" << endl;

    return 0;
}

